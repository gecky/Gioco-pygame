import pygame
from pygame.locals import *
import random
import sys

# Inizializzazione di Pygame
pygame.init()

# Dimensioni della finestra di gioco
larghezza = 800
altezza = 600

# Colori
BIANCO = (255, 255, 255)
NERO = (0, 0, 0)
ROSSO = (255, 0, 0)

# Creazione della finestra di gioco
schermo = pygame.display.set_mode((larghezza, altezza))
pygame.display.set_caption("Fruit Ninja")

# Caricamento delle immagini
sfondo = pygame.image.load("Users\garav\Desktop\FOTO GIOCO\sfondo.jpg")
frutta_immagini = ["Users\garav\Desktop\FOTO GIOCO\mela.jpg", "Users\garav\Desktop\FOTO GIOCO\banana.jpg", "Users\garav\Desktop\FOTO GIOCO\arancia.jpg", "Users\garav\Desktop\FOTO GIOCO\fragola.jpg"]
frutta_lista = []
velocita_fruit = 5



# Ciclo principale del gioco
while True:
    # Gestione degli eventi
    for evento in pygame.event.get():
        if evento.type == QUIT:
            # Chiusura del gioco
            pygame.quit()
            sys.exit()

    # Aggiornamento delle frutte
    frutta_group.update()

    # Controllo delle collisioni con il mouse
    pos_mouse = pygame.mouse.get_pos()
    frutta_colpite = pygame.sprite.spritecollide(Frutta(""), frutta_group, True)
        # Aggiungi qui la logica per il punteggio o altre azioni quando viene colpita una frutta

    # Disegno dello sfondo e delle frutte
    schermo.blit(sfondo, (0, 0))
    frutta_group.draw(schermo)

    # Aggiornamento della schermata
    pygame.display.flip()
